{% extends 'template.html.twig' %}
{% block title %}{{ parent() }} - {{ pages.getThetitle }}{% endblock %}

{% block titre %}{{ parent() }} - {{ pages.getThetitle }}{% endblock %}
{% block stitre %}Détail de notre article {% endblock %}

{% block menu %}
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link js-scroll-trigger" href="{{ path("accueil") }}">Accueil</a>
        </li>
        {% for itemMenu in sections %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path("detail_section", {"id": itemMenu.getIdthesection}) }}">{{ itemMenu.getThenamesection }}</a>
            </li>
        {% endfor %}
    </ul>

{% endblock %}

{% block contenu %}

    <h2>{{ pages.getThetitle }}</h2>
    <h3>
        {% for categ in pages.getThesectionthesection %}
            <a href="{{ path("detail_section", {"id": categ.getIdthesection}) }}">{{ categ.getThenamesection }}</a>
        {% endfor %}
    </h3>
    <p>{{ pages.getThelongtext|nl2br }} </p>
    <h4>Par {{ pages.getAuthorauthor.getThecompletename }} le {{ pages.getThetime|date("d/m/Y à H \\h i \\m") }}</h4><hr>

{% endblock %}